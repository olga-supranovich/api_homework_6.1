								"exec": [
									"let jsonBody = JSON.parse(responseBody)\r",
									"pm.environment.set(\"adminToken\", jsonBody.id_token);\r",
									"\r",
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
